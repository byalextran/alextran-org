        <form id="subscribe-form" class="newsletter-form cluster">
            <input type="email" id="email" name="email" placeholder="Where should I send the bits?" aria-label="Email address" required />
            <button type="submit" class="button" data-variant="accent">Let's Go</button>
        </form>
        <p id="response-message" class="text-sm color-muted">I'll only send you email bits when I have something worth sharing. No spam, ever.</p>
        <script>
            (function() {
                const form = document.getElementById('subscribe-form');
                const message = document.getElementById('response-message');

                form.addEventListener('submit', async function (e) {
                    e.preventDefault();

                    const email_address = document.getElementById('email').value;

                    const res = await fetch('/api/subscribe', {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ email_address })
                    });

                    const data = await res.json();

                    if (res.status == 200 || res.status == 201) {
                        form.hidden = true;
                    }
                    message.textContent = data.message;
                    message.hidden = false;
                });
            })();
        </script>
