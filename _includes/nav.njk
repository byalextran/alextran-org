<header class="site-header">
    <div class="container">
        <div class="with-sidebar" style="--sidebar-width: auto; --sidebar-content-min: 60%">
            <div class="sidebar">
                <a href="/" class="logo">{{ metadata.name }}</a>
            </div>
            <div class="nav-wrapper not-sidebar">
                <button
                    class="nav-toggle"
                    aria-expanded="false"
                    aria-controls="main-nav"
                    aria-label="Toggle navigation"
                >
                    <span class="nav-toggle-icon" aria-hidden="true"></span>
                </button>
                <nav
                    id="main-nav"
                    class="nav-menu cluster"
                    style="--cluster-justify: flex-end"
                    aria-label="Main navigation"
                >
                    <a href="/"{% if page.url == "/" %} data-state="active" aria-current="page"{% endif %}>Home</a>
                    <a href="/now/"{% if page.url == "/now/" %} data-state="active" aria-current="page"{% endif %}>Now</a>
                    <a href="/blog/"{% if page.url == "/blog/" %} data-state="active" aria-current="page"{% endif %}>Blog</a>
                    <a href="/contact/"{% if page.url == "/contact/" %} data-state="active" aria-current="page"{% endif %}>Contact</a>
                </nav>
            </div>
        </div>
    </div>
</header>
