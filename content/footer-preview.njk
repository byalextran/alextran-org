    border-bottom: 3px solid var(--color-accent);
    padding-bottom: var(--s-2);
}

/* De-emphasized site links */
.site-links {
    font-size: var(--s-1);
}

.site-links a {
    color: var(--color-muted);
    text-decoration: none;
    transition: color 0.15s ease;
}

.site-links a:hover {
    color: var(--color-primary-hover);
}

/* Connect links */
