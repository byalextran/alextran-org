    color: var(--color-border);
    margin-inline: var(--s-1);
}

/* ========================================
   Variation A: Stacked Horizontal Rows
   ======================================== */
.footer-var-a .footer-row {
    display: flex;
    align-items: baseline;
    gap: var(--s0);
    flex-wrap: wrap;
}

.footer-var-a .footer-row + .footer-row {
    margin-block-start: var(--s0);
}

.footer-var-a .row-label {
    font-weight: 700;
    min-width: 5rem;
}

.footer-var-a .row-links {
    display: flex;
    align-items: center;
    gap: 0;
    flex-wrap: wrap;
}

.footer-var-a .footer-bottom {
