.footer-var-b .footer-bottom {
    margin-block-start: var(--s2);
    text-align: center;
}

/* ========================================
   Variation C: Left-Aligned with Initials Right
   ======================================== */
.footer-var-c .footer-row {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: var(--s1);
    flex-wrap: wrap;
}

.footer-var-c .footer-row + .footer-row {
    margin-block-start: var(--s0);
}

.footer-var-c .row-left {
    display: flex;
    align-items: baseline;
    gap: var(--s0);
}

.footer-var-c .row-label {
    font-weight: 700;
    min-width: 5rem;
}

.footer-var-c .row-links {
    display: flex;
    align-items: center;
    gap: 0;
}

.footer-var-c .footer-mark {
    align-self: flex-end;
}

/* ========================================
   Variation D: Centered Block
   ======================================== */
.footer-var-d {
    text-align: center;
}

.footer-var-d .footer-row {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
    flex-wrap: wrap;
}

.footer-var-d .footer-row + .footer-row {
    margin-block-start: var(--s0);
}

.footer-var-d .footer-bottom {
    margin-block-start: var(--s2);
}

/* ========================================
   Variation E: Two-Column Compact
   ======================================== */
.footer-var-e .footer-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--s1);
    flex-wrap: wrap;
}

.footer-var-e .link-group {
    display: flex;
    align-items: center;
    gap: 0;
}

.footer-var-e .footer-bottom {
    margin-block-start: var(--s2);
    text-align: center;
}

/* ========================================
   Variation F: Centered with Initials as Link
