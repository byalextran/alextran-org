<!doctype html>
<html lang="{{ metadata.language }}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{% if overrideBaseTitle %}{{ title }}{% else %}{{ title }} – {{ metadata.name }}{% endif %}</title>
		<meta name="description" content="{{ description }}">
		<link rel="alternate" href="/feeds/atom.xml" type="application/atom+xml" title="Atom Feed – {{ metadata.name }}">
		<link rel="alternate" href="/feeds/rss.xml" type="application/rss+xml" title="RSS Feed – {{ metadata.name }}">

		{#- Web Fonts: Google Fonts + FontShare (Variable Fonts) #}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="preconnect" href="https://api.fontshare.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100..700;1,100..700&family=Lora:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">
		<link href="https://api.fontshare.com/v2/css?f[]=general-sans@1&display=swap" rel="stylesheet">

		{#- CUBE CSS: Global, Compositions, Utilities, Blocks #}
		<style>{% include "css/global.css" %}</style>
		<style>{% include "css/compositions.css" %}</style>
		<style>{% include "css/utilities.css" %}</style>
		<style>{% include "css/blocks.css" %}</style>

		{#- Per-page CSS bundle #}
		<style>{% getBundle "css" %}</style>
	</head>
	<body class="stack">
		<a href="#main" id="skip-link" class="visually-hidden">Skip to main content</a>

		{% include "partials/header.njk" %}

		<main id="main" tabindex="-1" style="--stack-space: 0">
			{{ content | safe }}
		</main>

		{% if showNewsletter %}
		{% include "partials/newsletter.njk" %}
		{% endif %}

		{% include "partials/footer.njk" %}

		{#- Navigation JavaScript #}
		{% js %}{% include "js/hamburger.js" %}{% endjs %}

		<script type="module">{% getBundle "js" %}</script>
		<!-- This page `{{ page.url }}` was built on {% currentBuildDate %} -->
	</body>
</html>
